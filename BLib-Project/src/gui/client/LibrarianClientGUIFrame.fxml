<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="1000.0" spacing="20" styleClass="root-container"  xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.client.LibrarianClientGUIController">
    <children>
        <VBox alignment="CENTER" maxWidth="1200.0" prefHeight="100.0" prefWidth="335.0" spacing="10" style="-fx-border-radius: 0; -fx-background-radius: 0;" styleClass="info-box">
            <children>
                <Label fx:id="lblTitle" styleClass="title-label" text="Welcome, Librarian!" />
            </children>
        </VBox>
        <VBox alignment="CENTER" maxWidth="400.0" minWidth="300.0" spacing="15" styleClass="info-box">
            <children>
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button fx:id="btnSearch" onAction="#searchBtn" styleClass="button" text="Search Book" />
                        <Button fx:id="btnUpdateDetails" onAction="#subscribersBtn" styleClass="button" text="Subscribers" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button fx:id="btnSignUp" onAction="#signUpBtn" styleClass="button" text="Sign Up Subscriber" />
                        <Button fx:id="btnBookActions" onAction="#bookActionsBtn" styleClass="button" text="Book Actions" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button fx:id="btnReports" onAction="#ReportsBtn" styleClass="button" text="Reports" />
                      <Button fx:id="btnMessages" onAction="#messagesBtn" styleClass="button" text="Messages">
                     <graphic>
                            <Label fx:id="lblNumMessages" alignment="CENTER" text="3" textFill="WHITE" />
                     </graphic>
                  </Button>
                    </children>
                </HBox>
              <HBox alignment="CENTER" spacing="10">
                  <children>
                    <Button fx:id="btnBack" onAction="#backBtn" styleClass="button-secondary" text="Log Out" />
                  </children>
              </HBox>
            </children>
         <VBox.margin>
            <Insets bottom="30.0" left="50.0" right="50.0" top="50.0" />
         </VBox.margin>
        </VBox>
    </children>
</VBox>
